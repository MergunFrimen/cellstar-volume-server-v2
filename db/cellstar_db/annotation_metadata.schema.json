{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "$defs": {
        "ChannelAnnotation": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "channel_id": {
                    "type": "string"
                },
                "color": {
                    "type": "array",
                    "items": {
                        "type": "number"
                    }
                },
                "label": {
                    "type": "string"
                }
            }
        },
        "SegmentAnnotationData": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "id": {
                    "type": "string",
                    "format": "uuid"
                },
                "segment_kind": {
                    "type": "string",
                    "enum": ["lattice", "mesh", "primitive"]
                },
                "segment_id": {
                    "type": "integer"
                },
                "segmentation_id": {
                    "type": "string"
                },
                "color": {
                    "type": "array",
                    "items": {
                        "type": "number"
                    }
                },
                "time": {
                    "type": ["integer", "array"]
                }
            },
            "required": [
                "segment_id",
                "segment_kind",
                "segmentation_id"
            ],
            "title": "SegmentAnnotationData"
        },
        "ExternalReference": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "id": {
                    "type": "string"
                },
                "resource": {
                    "type": "string"
                },
                "accession": {
                    "type": "string"
                },
                "label": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "url": {
                    "type": "string",
                    "format": "uri",
                    "qt-uri-protocols": [
                        "http",
                        "https"
                    ]
                }
            },
            "title": "ExternalReference"
        },
        "DescriptionText": {
            "type": ["object", "null"],
            "additionalProperties": false,
            "properties": {
                "format": {
                    "type": "string",
                    "enum": ["text", "markdown"]
                },
                "text": {
                    "type": "string"
                }
            }
        },
        "TargetID": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "segmentation_id": {
                    "type": "string"
                },
                "segment_id": {
                    "type": "integer"
                }
            },
            "required": [
                "segment_id",
                "segmentation_id"
            ],
            "title": "TargetID"
        },
        "DescriptionData": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "id": {
                    "type": "string",
                    "format": "uuid"
                },
                "target_kind": {
                    "type": "string",
                    "enum": ["lattice", "mesh", "primitive", "entry"]
                },
                "target_id": {
                    "$ref": "#/$defs/TargetID"
                },
                "name": {
                    "type": "string"
                },
                "external_references": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/ExternalReference"
                    }
                },
                "is_hidden": {
                    "type": ["boolean", "null"]
                },
                "time": {
                    "type": ["integer", "array"]
                },
                "description": {
                    "$ref": "#/$defs/DescriptionText"
                },
                "metadata": {
                    "type": "null"
                }
            },
            "required": [
                "target_kind"
            ],
            "title": "DescriptionData"
        }
    },
    "properties": {
        "name": {
            "type": "string"
        },
        "entry_id": {
            "type": "object",
            "properties": {
                "source_db_name": {
                    "type": "string"
                },
                "source_db_id": {
                    "type": "string"
                }
            },
            "required": [
                "source_db_name",
                "source_db_id"
            ]
        },
        "descriptions": {
            "type": "object",
            "propertyNames": {
                "format": "uuid"
            },
            "additionalProperties": {
                "$ref": "#/$defs/DescriptionData"
            }
        },
        "annotations": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/SegmentAnnotationData"
            }
        },
        "details": {
            "type": "string"
        },
        "volume_channels_annotations": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/ChannelAnnotation"
            }
        }
    },
    "required": [
        "entry_id",
        "descriptions",
        "annotations"
    ]
}